{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "metadata": {
        "description": "Ubuntu 24.04 VM (Corp LZ) mit Trusted Launch, Encryption at Host und automatischer SSG-Härtung per Custom Script (OpenSCAP/SCAP Security Guide).",
        "moreInformation": "https://github.com/thinformatics/azure-lz-templates",
        "category": "Compute/VirtualMachines"
    },
    "parameters": {
        "name": {
            "type": "string",
            "defaultValue": "webserver",
            "minLength": 3,
            "maxLength": 11,
            "metadata": {
                "description": "Rollenbasierter Kurzname der VM (ohne Stage und Nummer), z. B. 'webserver', 'fileserver'."
            }
        },
        "stage": {
            "type": "string",
            "defaultValue": "dev",
            "allowedValues": [ "dev", "tst", "preprod", "prod" ],
            "metadata": {
                "description": "Stage/Umgebung für Namenskonventionen (dev, tst, preprod, prod)."
            }
        },
        "identifier": {
            "type": "string",
            "defaultValue": "001",
            "minLength": 3,
            "maxLength": 3,
            "metadata": {
                "description": "Dreistellige Nummer für Namenskonventionen, z.B. '001', '002' etc."
            }
        },
        "vmSize": {
            "type": "string",
            "defaultValue": "Standard_B2ms",
            "metadata": {
                "description": "VM-Größe der virtuellen Maschine, z.B. 'Standard_B2ms'"
            }
        },
        "diskStorageType": {
            "type": "string",
            "defaultValue": "Standard SSD — LRS (Lokalredundant / Allround)",
            "allowedValues": [
                "Standard HDD — LRS (Lokalredundant / Geringe I/O)",
                "Standard SSD — LRS (Lokalredundant / Allround)",
                "Premium SSD — LRS  (Lokalredundant / hohe I/O)",
                "Standard SSD — ZRS (Zonenredundant in der Region)",
                "Premium SSD — ZRS  (Zonenredundant in der Region)"
            ],
            "metadata": {
                "description": "OS-SpeicherTyp. Die Region hat drei Zonen / Separate Rechenzentren."
            }
        },
        "osDiskSizeGiB": {
            "type": "int",
            "defaultValue": 64,
            "allowedValues": [ 64, 128, 256, 512, 1024 ],
            "metadata": {
                "description": "Größe der OS-Disk in GiB - Die Größen können im Template beliebig angepasst werden."
            }
        },
        "adminUsername": {
            "type": "string",
            "metadata": { "description": "Lokaler Linux-Benutzer mit sudo-Rechten." }
        },
        "adminSshKey": {
            "type": "string",
            "metadata": {
                "description": "Öffentlicher SSH-Schlüssel im OpenSSH-Format (z. B. 'ssh-ed25519 AAAA... user@host' oder 'ssh-rsa AAAA... user@host')."
            }
        },
        "addressPrefix": {
            "type": "string",
            "defaultValue": "10.10.0.0/16",
            "metadata": {
                "description": "Address Space des VNET (CIDR) - Bitte vorher Netzbereich mit Cloud-Plattform-Team abstimmten"
            }
        },
        "subnetPrefix": {
            "type": "string",
            "defaultValue": "10.10.1.0/24",
            "metadata": {
                "description": "Subnetz-Präfix für 'default' (CIDR) - Bitte vorher Netzbereich mit Cloud-Plattform-Team abstimmten"
            }
        },
        "ssgProfile": {
            "type": "string",
            "defaultValue": "cis_l1_server",
            "allowedValues": [
                "cis_l1_server",
                "cis_l2_server",
                "cis_l1_workstation",
                "cis_l2_workstation",
                "stig"
            ],
            "metadata": {
                "description": "SSG-Profil (Ubuntu 24.x): CIS (Server/Workstation L1/L2), STIG."
            }
        }
    },
    "variables": {
        "vmName": "[concat('vm-', parameters('name'), '-', toLower(parameters('stage')), '-', parameters('identifier'))]",
        "vmHostname": "[concat(parameters('name'), '-', parameters('identifier'))]",
        "stageLower": "[toLower(parameters('stage'))]",
        "nicName": "[concat('nic-', parameters('name'), '-', variables('stageLower'), '-', parameters('identifier'))]",
        "vnetName": "[concat('vnet-', parameters('name'), '-', variables('stageLower'), '-', parameters('identifier'))]",
        "subnetName": "default",
        "nsgName": "[concat('nsg-', parameters('name'), '-', variables('stageLower'), '-', parameters('identifier'))]",
        "osDiskName": "[concat('osdisk-', parameters('name'), '-', variables('stageLower'), '-', parameters('identifier'))]",
        "diskSkuMap": {
            "Standard HDD — LRS (Lokalredundant / Geringe I/O)": "Standard_LRS",
            "Standard SSD — LRS (Lokalredundant / Allround)": "StandardSSD_LRS",
            "Premium SSD — LRS  (Lokalredundant / hohe I/O)": "Premium_LRS",
            "Standard SSD — ZRS (Zonenredundant in der Region)": "StandardSSD_ZRS",
            "Premium SSD — ZRS  (Zonenredundant in der Region)": "Premium_ZRS"
        },
        "diskStorageSku": "[variables('diskSkuMap')[parameters('diskStorageType')]]"
    },
    "resources": [
        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2023-11-01",
            "name": "[variables('nsgName')]",
            "location": "germanywestcentral",
            "properties": { "securityRules": [] }
        },
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2023-11-01",
            "name": "[variables('vnetName')]",
            "location": "germanywestcentral",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [ "[parameters('addressPrefix')]" ]
                },
                "subnets": [
                    {
                        "name": "[variables('subnetName')]",
                        "properties": {
                            "addressPrefix": "[parameters('subnetPrefix')]",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsgName'))]"
                            }
                        }
                    }
                ]
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsgName'))]"
            ]
        },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2023-11-01",
            "name": "[variables('nicName')]",
            "location": "germanywestcentral",
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('vnetName'), variables('subnetName'))]"
                            },
                            "privateIPAllocationMethod": "Dynamic"
                        }
                    }
                ],
                "enableAcceleratedNetworking": false
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', variables('vnetName'))]"
            ]
        },
        {
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2023-09-01",
            "name": "[variables('vmName')]",
            "location": "germanywestcentral",
            "identity": { "type": "SystemAssigned" },
            "properties": {
                "securityProfile": {
                    "encryptionAtHost": true,
                    "securityType": "TrustedLaunch",
                    "uefiSettings": {
                        "secureBootEnabled": true,
                        "vTpmEnabled": true
                    }
                },
                "hardwareProfile": { "vmSize": "[parameters('vmSize')]" },
                "osProfile": {
                    "computerName": "[variables('vmHostname')]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "linuxConfiguration": {
                        "disablePasswordAuthentication": true,
                        "ssh": {
                            "publicKeys": [
                                {
                                    "path": "[concat('/home/', parameters('adminUsername'), '/.ssh/authorized_keys')]",
                                    "keyData": "[parameters('adminSshKey')]"
                                }
                            ]
                        },
                        "patchSettings": {
                            "patchMode": "AutomaticByPlatform",
                            "assessmentMode": "AutomaticByPlatform"
                        }
                    }
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "canonical",
                        "offer": "ubuntu-24_04-lts",
                        "sku": "ubuntu-pro",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "[variables('osDiskName')]",
                        "createOption": "FromImage",
                        "diskSizeGB": "[parameters('osDiskSizeGiB')]",
                        "managedDisk": {
                            "storageAccountType": "[variables('diskStorageSku')]"
                        }
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('nicName'))]"
                        }
                    ]
                },
                "diagnosticsProfile": { "bootDiagnostics": { "enabled": true } }
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', variables('nicName'))]"
            ]
        },
        {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "apiVersion": "2023-09-01",
            "name": "[concat(variables('vmName'), '/CustomScriptExtension-Linux')]",
            "location": "germanywestcentral",
            "properties": {
                "publisher": "Microsoft.Azure.Extensions",
                "type": "CustomScript",
                "typeHandlerVersion": "2.1",
                "autoUpgradeMinorVersion": true,
                "settings": {},
                "protectedSettings": {
                    "fileUris": [
                        "https://raw.githubusercontent.com/thinformatics/azure-lz-templates/refs/heads/main/utils/ubuntu24-ssg-apply.sh"
                    ],
                    "commandToExecute": "[format('bash ubuntu24-ssg-apply.sh {0}', parameters('ssgProfile'))]"
                }
            },
            "dependsOn": [
                "[resourceId('Microsoft.Compute/virtualMachines', variables('vmName'))]"
            ]
        }
    ],
    "outputs": {
        "privateIpAddress": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.Network/networkInterfaces', variables('nicName'))).ipConfigurations[0].properties.privateIPAddress]"
        }
    }
}
