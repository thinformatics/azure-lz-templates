{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "metadata": {
        "description": "Windows Server 2025 VM (Corp LZ) mit OSConfig-Baseline.",
        "moreInformation": "https://github.com/thinformatics/azure-lz-templates",
        "category": "Compute/VirtualMachines"
    },
    "parameters": {
        "name": {
            "type": "string",
            "defaultValue": "webserver",
            "minLength": 3,
            "maxLength": 11,
            "metadata": {
                "description": "Name der VM (Rolle): z.B. 'webserver', 'fileserver' etc. ohne Stage und Nummer"
            }
        },
        "stage": {
            "type": "string",
            "defaultValue": "dev",
            "allowedValues": [
                "dev",
                "tst",
                "preprod",
                "prod"
            ],
            "metadata": {
                "description": "Stage/Umgebung für Namenskonventionen"
            }
        },
        "identifier": {
            "type": "string",
            "defaultValue": "001",
            "minLength": 3,
            "maxLength": 3,
            "metadata": {
                "description": "Dreistellige Nummer für Namenskonventionen, z.B. '001', '002' etc."
            }
        },
        "ownerTag": {
            "type": "string",
            "defaultValue": "TEAM_ODER_OWNER",
            "metadata": {
                "description": "Owner/Verantwortlicher dieser Ressourcen (Name, Gruppe oder E-Mail) je nach eigener Konvention."
            }
        },
        "vmSize": {
            "type": "string",
            "defaultValue": "Standard_B2ms",
            "metadata": {
                "description": "VM-Größe der virtuellen Maschine, z.B. 'Standard_B2ms'"
            }
        },
        "diskStorageType": {
            "type": "string",
            "defaultValue": "Standard SSD — LRS (Lokalredundant / Allround)",
            "allowedValues": [
                "Standard HDD — LRS (Lokalredundant / Geringe I/O)",
                "Standard SSD — LRS (Lokalredundant / Allround)",
                "Premium SSD — LRS  (Lokalredundant / hohe I/O)",
                "Standard SSD — ZRS (Zonenredundant in der Region)",
                "Premium SSD — ZRS  (Zonenredundant in der Region)"
            ],
            "metadata": {
                "description": "OS-SpeicherTyp. Die Regeion hat drei Zonen / Separate Rechenzentren."
            }
        },
        "osDiskSizeGiB": {
            "type": "int",
            "defaultValue": 128,
            "allowedValues": [ 128, 256, 512, 1024 ],
            "metadata": {
                "description": "Größe der OS-Disk in GiB - Die Größen können im Template beliebig angepasst werden."
            }
        },
        "adminUsername": {
            "type": "string",
            "metadata": {
                "description": "Lokaler Admin-Benutzername"
            }
        },
        "adminPassword": {
            "type": "securestring",
            "minLength": 12,
            "metadata": {
                "description": "Sicheres Passwort für den lokalen Admin (Key Vault Reference empfohlen)"
            }
        },
        "addressPrefix": {
            "type": "string",
            "defaultValue": "10.10.0.0/16",
            "metadata": {
                "description": "Address Space des VNET (CIDR)"
            }
        },
        "subnetPrefix": {
            "type": "string",
            "defaultValue": "10.10.1.0/24",
            "metadata": {
                "description": "Subnetz-Präfix für 'default' (CIDR)"
            }
        },
        "scenario": {
            "type": "string",
            "allowedValues": [
                "Member Server - Windows Server in Domäne (z.B. Fileserver)",
                "Workgroup Member - Windows Server ohne Domäne",
                "Domain Controller - Speziell für Active Directory Domain Controller"
            ],
            "metadata": {
                "description": "OS-Config-Szenario in dem die VM vorkonfiguriert werden soll."
            }
        }
    },
    "variables": {
        "vmName": "[concat('vm-', parameters('name'), '-', toLower(parameters('stage')), '-', parameters('identifier'))]",
        "vmHostname": "[concat(parameters('name'), '-', parameters('identifier'))]",
        "stageLower": "[toLower(parameters('stage'))]",
        "nicName": "[concat('nic-', parameters('name'), '-', variables('stageLower'), '-', parameters('identifier'))]",
        "vnetName": "[concat('vnet-', parameters('name'), '-', variables('stageLower'), '-', parameters('identifier'))]",
        "subnetName": "default",
        "nsgName": "[concat('nsg-', parameters('name'), '-', variables('stageLower'), '-', parameters('identifier'))]",
        "osDiskName": "[concat('osdisk-', parameters('name'), '-', variables('stageLower'), '-', parameters('identifier'))]",
        "diskSkuMap": {
            "Standard HDD — LRS (Lokalredundant / Geringe I/O)": "Standard_LRS",
            "Standard SSD — LRS (Lokalredundant / Allround)": "StandardSSD_LRS",
            "Premium SSD — LRS  (Lokalredundant / hohe I/O)": "Premium_LRS",
            "Standard SSD — ZRS (Zonenredundant in der Region)": "StandardSSD_ZRS",
            "Premium SSD — ZRS  (Zonenredundant in der Region)": "Premium_ZRS"
        },
        "diskStorageSku": "[variables('diskSkuMap')[parameters('diskStorageType')]]",
        "scenarioMap": {
            "Member Server - Windows Server in Domäne (z.B. Fileserver)": "MemberServer",
            "Workgroup Member - Windows Server ohne Domäne": "WorkgroupMember",
            "Domain Controller - Speziell für Active Directory Domain Controller": "DomainController"
        },
        "OsConfigScenario": "[variables('scenarioMap')[parameters('scenario')]]"
    },
    "resources": [
        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "apiVersion": "2023-11-01",
            "name": "[variables('nsgName')]",
            "location": "germanywestcentral",
            "tags": {
                "owner": "[parameters('ownerTag')]"
            },
            "properties": {
                "securityRules": []
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2023-11-01",
            "name": "[variables('vnetName')]",
            "location": "germanywestcentral",
            "tags": {
                "owner": "[parameters('ownerTag')]"
            },
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('addressPrefix')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[variables('subnetName')]",
                        "properties": {
                            "addressPrefix": "[parameters('subnetPrefix')]",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsgName'))]"
                            }
                        }
                    }
                ]
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkSecurityGroups', variables('nsgName'))]"
            ]
        },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "apiVersion": "2023-11-01",
            "name": "[variables('nicName')]",
            "location": "germanywestcentral",
            "tags": {
                "owner": "[parameters('ownerTag')]"
            },
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "subnet": {
                                "id": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('vnetName'), variables('subnetName'))]"
                            },
                            "privateIPAllocationMethod": "Dynamic"
                        }
                    }
                ],
                "enableAcceleratedNetworking": false
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/virtualNetworks', variables('vnetName'))]"
            ]
        },
        {
            "type": "Microsoft.Compute/virtualMachines",
            "apiVersion": "2023-09-01",
            "name": "[variables('vmName')]",
            "location": "germanywestcentral",
            "identity": {
                "type": "SystemAssigned"
            },
            "tags": {
                "owner": "[parameters('ownerTag')]"
            },
            "properties": {
                "securityProfile": {
                    "encryptionAtHost": true,
                    "securityType": "TrustedLaunch",
                    "uefiSettings": {
                        "secureBootEnabled": true,
                        "vTpmEnabled": true
                    }
                },
                "hardwareProfile": {
                    "vmSize": "[parameters('vmSize')]"
                },
                "osProfile": {
                    "computerName": "[variables('vmHostname')]",
                    "adminUsername": "[parameters('adminUsername')]",
                    "adminPassword": "[parameters('adminPassword')]",
                    "windowsConfiguration": {
                        "enableAutomaticUpdates": true,
                        "provisionVMAgent": true,
                        "patchSettings": {
                            "patchMode": "AutomaticByPlatform",
                            "assessmentMode": "AutomaticByPlatform",
                            "enableHotpatching": true,
                            "automaticByPlatformSettings": {
                                "rebootSetting": "IfRequired"
                            }
                        }

                    }
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "MicrosoftWindowsServer",
                        "offer": "WindowsServer",
                        "sku": "2025-datacenter-g2",
                        "version": "latest"
                    },
                    "osDisk": {
                        "name": "[variables('osDiskName')]",
                        "createOption": "FromImage",
                        "diskSizeGB": "[parameters('osDiskSizeGiB')]",
                        "managedDisk": {
                            "storageAccountType": "[variables('diskStorageSku')]"
                        }
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('nicName'))]"
                        }
                    ]
                },
                "diagnosticsProfile": {
                    "bootDiagnostics": {
                        "enabled": true
                    }
                }
            },
            "dependsOn": [
                "[resourceId('Microsoft.Network/networkInterfaces', variables('nicName'))]"
            ]
        },
        {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "apiVersion": "2023-09-01",
            "name": "[concat(variables('vmName'), '/CustomScriptExtension-OSConfig')]",
            "location": "germanywestcentral",
            "properties": {
                "publisher": "Microsoft.Compute",
                "type": "CustomScriptExtension",
                "typeHandlerVersion": "1.10",
                "autoUpgradeMinorVersion": true,
                "settings": {},
                "protectedSettings": {
                    "fileUris": [
                        "https://raw.githubusercontent.com/thinformatics/azure-lz-templates/refs/heads/main/utils/Initialize-OSConfig.ps1"
                    ],
                    "commandToExecute": "[concat('powershell -ExecutionPolicy Bypass -NoProfile -NonInteractive -File Initialize-OSConfig.ps1 -Scenario ', variables('OsConfigScenario'))]"
                }
            },
            "dependsOn": [
                "[resourceId('Microsoft.Compute/virtualMachines', variables('vmName'))]"
            ]
        }
    ],
    "outputs": {
        "privateIpAddress": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.Network/networkInterfaces', variables('nicName'))).ipConfigurations[0].properties.privateIPAddress]"
        }
    }
}